<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/bought_clothing_image"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/cheburashka"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/bought_clothing_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:padding="12dp"
        android:textColor="@color/clothing_price_color"
        android:textSize="20sp"
        tools:text="Very short"/>

    <TextView
        android:id="@+id/bought_clothing_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:padding="12dp"
        android:textColor="@color/clothing_price_color"
        android:textSize="20sp"
        tools:text="340 â‚´"/>
</LinearLayout>